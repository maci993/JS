      //a.
      function oddListElements() {
        const odd = document
          .querySelectorAll("book-list");
        for (let i = 0; i < odd.lenght; i++) {
          if (i % 2 !== 0) {
            odd[i].style.background = "lightblue";
          }
        }
      }
      oddListElements();

